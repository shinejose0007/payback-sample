pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Install') {
      steps { sh 'python -m pip install -r requirements.txt' }
    }
    stage('Test') {
      steps { sh 'pytest -q' }
    }
    stage('Build Docker') {
      steps { sh 'docker build -t payback-mlops-demo:latest .' }
    }
    // Add publish steps (GCR, Artifact registry) as needed with credentials
  }
}
